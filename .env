# Azure SQL Database Configuration
# Replace with your actual Azure SQL Database connection details

# Azure SQL Database Connection String
AZURE_SQL_SERVER=roman-zatca-server.database.windows.net
AZURE_SQL_DATABASE=invoicedb
AZURE_SQL_USERNAME=your_username
AZURE_SQL_PASSWORD=your_password
AZURE_SQL_PORT=1433

# Alternative: Full connection string format
# AZURE_SQL_CONNECTION_STRING=Server=roman-zatca-server.database.windows.net,1433;Database=invoicedb;User Id=your_username;Password=your_password;Encrypt=true;TrustServerCertificate=false;Connection Timeout=30;

# Application Configuration
NODE_ENV=development
VITE_APP_NAME=ZATCA Invoice Creator
VITE_APP_VERSION=1.0.0

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_for_authentication

# ZATCA Configuration
ZATCA_ENVIRONMENT=sandbox
ZATCA_API_BASE_URL=https://gw-fatoora.zatca.gov.sa

# Database Configuration


DB_CONNECTION_TIMEOUT=30000
DB_REQUEST_TIMEOUT=15000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# Sync Configuration
SYNC_BATCH_SIZE=50
SYNC_INTERVAL=300000
OFFLINE_RETENTION_DAYS=30

# ZATCA Configuration
ZATCA_ENVIRONMENT=production
ZATCA_API_BASE_URL=https://api.zatca.gov.sa
ZATCA_CERTIFICATE_PATH=./certificates/zatca_cert.pem
ZATCA_PRIVATE_KEY_PATH=./certificates/zatca_private_key.pem

# Application Configuration
APP_NAME=Metal Scrap Invoice App
APP_VERSION=1.0.0
